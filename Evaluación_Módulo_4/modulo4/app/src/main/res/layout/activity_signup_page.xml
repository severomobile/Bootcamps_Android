<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="Registrarse y
            empezar a transferir"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        tools:layout_editor_absoluteX="15dp"
        />

    <TextView
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/nombre_boton"
        app:layout_constraintStart_toStartOf="@+id/nombre_boton"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/nombre_boton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/jua"
        android:text="Ingresar nombre"
        android:textAlignment="textStart"
        android:textColor="#B3ACAC"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33"
        app:strokeWidth="3dp"
        app:strokeColor="#EAEAEA"
        />

    <TextView
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="Apellido"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/apellido_boton"
        app:layout_constraintStart_toStartOf="@+id/apellido_boton"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/apellido_boton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/jua"
        android:text="Ingresar apellido"
        android:textAlignment="textStart"
        android:textColor="#B3ACAC"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44"
        app:strokeWidth="3dp"
        app:strokeColor="#EAEAEA"
        />

    <TextView
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/outlinedButton"
        app:layout_constraintStart_toStartOf="@+id/outlinedButton"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/outlinedButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/jua"
        android:text="Ingresar email"
        android:textAlignment="textStart"
        android:textColor="#B3ACAC"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:strokeWidth="3dp"
        app:strokeColor="#EAEAEA"
        />

    <TextView
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="Contraseña"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/contraseña_boton"
        app:layout_constraintStart_toStartOf="@+id/contraseña_boton"
        android:textStyle="bold"
        />

    <Button
        app:iconTint="#CDCDCD"
        android:id="@+id/contraseña_boton"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        app:icon="@drawable/eye_icon"
        app:iconSize="30dp"
        app:iconGravity="end"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/jua"
        android:text="Ingresar contraseña"
        android:textAlignment="textStart"
        android:textColor="#B3ACAC"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66"
        app:strokeWidth="3dp"
        app:strokeColor="#EAEAEA"
        />

    <TextView
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="Reingresar contraseña"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/reingresar_contraseña_boton"
        app:layout_constraintStart_toStartOf="@+id/reingresar_contraseña_boton"
        android:textStyle="bold"
        />

    <Button
        app:iconTint="#CDCDCD"
        android:id="@+id/reingresar_contraseña_boton"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        app:icon="@drawable/eye_icon"
        app:iconSize="30dp"
        app:iconGravity="end"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/jua"
        android:text="Reingresar contraseña"
        android:textAlignment="textStart"
        android:textColor="#B3ACAC"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77"
        app:strokeWidth="3dp"
        app:strokeColor="#EAEAEA"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/colorSplashBackground"
        android:fontFamily="@font/jua"
        android:text="Crear Cuenta"
        android:textSize="20sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jua"
        android:text="Ya tienes una cuenta?"
        android:textColor="@color/colorSplashBackground"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>