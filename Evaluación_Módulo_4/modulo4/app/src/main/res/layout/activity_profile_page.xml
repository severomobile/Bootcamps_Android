<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/guia_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F4F5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pencil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                tools:layout_editor_absoluteY="75dp" />

            <TextView
                android:id="@+id/textView7"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/jua"
                android:text="Mi Perfil"
                android:textSize="26sp"
                app:layout_constraintBottom_toTopOf="@+id/circulo_blanco"
                app:layout_constraintEnd_toEndOf="@+id/circulo_blanco"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/circulo_blanco" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:text="Amanda Alkemy"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/circulo_blanco"
                app:layout_constraintVertical_bias="0.5" />

            <ImageView
                android:id="@+id/circulo_blanco"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/circulo_blanco"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.679" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/perfil_picture"
                app:layout_constraintBottom_toBottomOf="@id/circulo_blanco"
                app:layout_constraintEnd_toEndOf="@id/circulo_blanco"
                app:layout_constraintStart_toStartOf="@id/circulo_blanco"
                app:layout_constraintTop_toTopOf="@id/circulo_blanco" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <Button
        android:id="@+id/boton_1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#F3F4F5"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/guia_4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guia_3"
        app:layout_constraintTop_toTopOf="@+id/guia_2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/profile_icon"
        app:layout_constraintBottom_toBottomOf="@+id/boton_1"
        app:layout_constraintEnd_toEndOf="@+id/boton_1"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/boton_1"
        app:layout_constraintTop_toTopOf="@+id/boton_1" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/arrow_icon"
        app:layout_constraintBottom_toBottomOf="@+id/boton_1"
        app:layout_constraintEnd_toEndOf="@+id/boton_1"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/boton_1"
        app:layout_constraintTop_toTopOf="@+id/boton_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi informaciÃ³n"
        android:fontFamily="@font/jua"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton_1"
        app:layout_constraintEnd_toEndOf="@+id/boton_1"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/boton_1"
        app:layout_constraintTop_toTopOf="@+id/boton_1" />

    <Button
        android:id="@+id/boton_2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#F3F4F5"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/guia_4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guia_3"
        app:layout_constraintTop_toBottomOf="@+id/boton_1" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/card_icon"
        app:layout_constraintBottom_toBottomOf="@+id/boton_2"
        app:layout_constraintEnd_toEndOf="@+id/boton_2"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/boton_2"
        app:layout_constraintTop_toTopOf="@+id/boton_2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/arrow_icon"
        app:layout_constraintBottom_toBottomOf="@+id/boton_2"
        app:layout_constraintEnd_toEndOf="@+id/boton_2"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/boton_2"
        app:layout_constraintTop_toTopOf="@+id/boton_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis tarjetas"
        android:fontFamily="@font/jua"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton_2"
        app:layout_constraintEnd_toEndOf="@+id/boton_2"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/boton_2"
        app:layout_constraintTop_toTopOf="@+id/boton_2" />

    <Button
        android:id="@+id/boton_3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#F3F4F5"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/guia_4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guia_3"
        app:layout_constraintTop_toBottomOf="@+id/boton_2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/settings_icon"
        app:layout_constraintBottom_toBottomOf="@+id/boton_3"
        app:layout_constraintEnd_toEndOf="@+id/boton_3"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/boton_3"
        app:layout_constraintTop_toTopOf="@+id/boton_3" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/arrow_icon"
        app:layout_constraintBottom_toBottomOf="@+id/boton_3"
        app:layout_constraintEnd_toEndOf="@+id/boton_3"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/boton_3"
        app:layout_constraintTop_toTopOf="@+id/boton_3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opciones"
        android:fontFamily="@font/jua"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton_3"
        app:layout_constraintEnd_toEndOf="@+id/boton_3"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/boton_3"
        app:layout_constraintTop_toTopOf="@+id/boton_3" />

    <Button
        android:id="@+id/boton_4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#F3F4F5"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/guia_4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guia_3"
        app:layout_constraintTop_toBottomOf="@+id/boton_3" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/help_icon"
        app:layout_constraintBottom_toBottomOf="@+id/boton_4"
        app:layout_constraintEnd_toEndOf="@+id/boton_4"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/boton_4"
        app:layout_constraintTop_toTopOf="@+id/boton_4" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/arrow_icon"
        app:layout_constraintBottom_toBottomOf="@+id/boton_4"
        app:layout_constraintEnd_toEndOf="@+id/boton_4"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/boton_4"
        app:layout_constraintTop_toTopOf="@+id/boton_4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centro de ayuda"
        android:fontFamily="@font/jua"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton_4"
        app:layout_constraintEnd_toEndOf="@+id/boton_4"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/boton_4"
        app:layout_constraintTop_toTopOf="@+id/boton_4" />

</androidx.constraintlayout.widget.ConstraintLayout>